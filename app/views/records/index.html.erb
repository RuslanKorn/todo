<table>
  <thead>
    <tr><td colspan="4" class='title'>
    <h1>TO DO List</h1>
    <%= form_for Record.new do |f| %>
        <div class="field">
        <%= f.text_field :text, size: 30 %>
        <%= f.submit "Submit", remote: true %>
        </div>
      <% end %>
    </td></tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr data-record_id="<%= record.id %>">
        <td class="min_size"><span class="checkbox"><%=check_box_tag '', record.id, false%></span></td>
        <td class="text"><%= record.text.capitalize %></td>
        <td class="min_size"><%= link_to 'Edit', edit_record_path(record) %></td>
        <td class="min_size"><span class='deleteAction'><%=image_tag 'cross_small.png'%></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
